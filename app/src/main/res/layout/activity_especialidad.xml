<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Option.EspecialidadActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"

        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:text="Especialidad"
            android:textSize="20dp" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Alergología" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Cardiología "
            android:visibility="gone" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Dermatología " />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Gastroenterología"
            android:visibility="gone" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Medicina Física y Rehabilitación"
            android:visibility="gone" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Medicina General " />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Medicina Interna" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Nutrición "
            android:visibility="gone" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Pediatría" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Psicología" />

        <Button
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:onClick="btnMedicos"
            android:text="Traumatologia y Ortopedia" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"

            android:layout_marginBottom="20dp"
            android:textSize="20dp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>