<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorVerdeAzul"
    android:fitsSystemWindows="false"
    tools:context=".Business.DoctorEnd">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="25dp"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingTop="36dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/nameg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="AtenciÃ³n Medica "
                android:textColor="@color/colorAmarillo"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/ic_doctorapp" />


            <TextView
                android:id="@+id/fin_doctorFirstNameFin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:text="name"
                android:textColor="@color/colorVerdeAzul"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="center"
                android:padding="10dp">

                <TextView
                    android:id="@+id/profile_doctor_especialidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:text="Especialidad"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/c_especialidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@+id/profile_doctor_especialidad"
                    android:text="Medicina"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fin_tiempo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/profile_doctor_especialidad"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:text="Tiempo"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/c_tiempo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/profile_doctor_especialidad"
                    android:layout_alignRight="@+id/fin_tiempo"
                    android:text="ctiempo"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fin_servicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fin_tiempo"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:text="Servicio"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/c_servicio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fin_tiempo"
                    android:layout_alignRight="@+id/fin_servicio"
                    android:text="c_servicio"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/fin_consulta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fin_servicio"
                    android:layout_marginLeft="40sp"
                    android:layout_marginRight="40sp"
                    android:text="Consulta"
                    android:textSize="14dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/firstname4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fin_servicio"
                    android:layout_alignRight="@+id/fin_consulta"
                    android:text="S/40.00"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <EditText
                android:id="@+id/id_paciente_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/button_style_rounded"
                android:gravity="center"
                android:hint="Escriba algun comentario " />

            <Button
                android:id="@+id/btn_fin_atencion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="40dp"
                android:background="@drawable/custom_button_2"
                android:elevation="8dp"
                android:text="Finalizar"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </android.support.v7.widget.CardView>


</ScrollView>