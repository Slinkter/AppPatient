<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Business.FinActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AtenciÃ³n Medica"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/color_white"
        app:cardCornerRadius="25dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fin_doctorImage"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="6dp"
                    app:civ_border_color="@color/startblue"
                    app:civ_border_width="3dp" />

                <TextView
                    android:id="@+id/fin_doctorFirstNameFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Doctor "

                    android:textColor="@color/startblue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/fin_doctorLastNameFin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="40dp"
                    android:text="lastname"
                    android:textColor="@color/startblue"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/bs_doctorPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:text="999-999-999"
                    android:textColor="@color/startblue"
                    android:textSize="20sp"
                    android:visibility="gone" />

            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/bs_doctorImagefin"
                    android:layout_width="105dp"
                    android:layout_height="105dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/ic_client"
                    app:civ_border_color="@color/startblue"
                    app:civ_border_width="3dp" />

                <TextView
                    android:id="@+id/bs_pacienteFirstName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Paciente "

                    android:textColor="@color/startblue"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/bs_pacienteLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="40dp"
                    android:text="lastname"
                    android:textColor="@color/startblue"
                    android:textSize="16sp" />


            </LinearLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:padding="5dp">

            <TextView
                android:id="@+id/especialidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:text="especialidad"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/especialidad"
                android:text="name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/especialidad2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/especialidad"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:text="Tiempo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstname2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/especialidad"
                android:layout_alignRight="@+id/especialidad2"
                android:text="name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/especialidad3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/especialidad2"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:text="Distancia"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstname3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/especialidad2"
                android:layout_alignRight="@+id/especialidad3"
                android:text="name"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/especialidad4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/especialidad3"
                android:layout_marginLeft="40sp"
                android:layout_marginRight="40sp"
                android:text="Consulta"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/firstname4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/especialidad3"
                android:layout_alignRight="@+id/especialidad4"
                android:text="S/40.00"
                android:textStyle="bold" />


        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_botton_3"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="Finalizar"
        android:textColor="#fff"
        android:textSize="20dp" />


</LinearLayout>