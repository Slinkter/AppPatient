<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Activities.MainActivity">

    <!-- Old Version-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Bienvenido"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USUARIO"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="USUARIO"
                android:textSize="18sp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnMedicos"
                android:layout_width="@dimen/button_width_main"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_accept"
                android:text="Medicos"
                android:textColor="@color/color_white" />

            <Button
                android:id="@+id/btnEspecialidad"
                android:layout_width="@dimen/button_width_main"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_accept"
                android:text="Especialidad "
                android:textColor="@color/color_white"
                android:visibility="gone" />


            <Button
                android:id="@+id/btnUbicacion"
                android:layout_width="@dimen/button_width_main"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_accept"
                android:text="Ubicación"
                android:textColor="@color/color_white" />

            <Button
                android:id="@+id/btnUpdateInfo"
                android:layout_width="@dimen/button_width_main"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_accept"
                android:text="Actualizar Datos "
                android:textColor="@color/color_white" />

            <Button
                android:id="@+id/btnHistorial"
                android:layout_width="@dimen/button_width_main"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_accept"
                android:text="Historial "
                android:textColor="@color/color_white" />

            <Button
                android:id="@+id/btnCerra_sesion"
                android:layout_width="@dimen/button_width_main"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/custom_button_decline"
                android:text="Cerrar Sesión"
                android:textColor="@color/color_white" />


        </LinearLayout>

    </LinearLayout>
    <!-- Old Version-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView

                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"

                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button

                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/main_1"
                        android:baselineAligned="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"

                        android:text="Medicos" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"

                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button

                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/main_2"
                        android:baselineAligned="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"

                        android:text="Ubicacion" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <!-- 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView

                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"

                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/diapo1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/main_4"
                        android:baselineAligned="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"

                        android:text="Historial" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView

                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"

                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/diapo3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/main_3"
                        android:baselineAligned="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"

                        android:text="Perfil" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <!-- 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView

                android:layout_width="150dp"
                android:layout_height="190dp"
                android:layout_margin="10dp"
                android:foreground="?android:attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/diapo5"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:baselineAligned="false" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="center"

                        android:text="Salir" />
                </LinearLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>